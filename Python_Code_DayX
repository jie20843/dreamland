 do C

# This is a program to calculate how much your pizza cost.

print("Thank you for choosing Python Pizza Deliveries!")
size = input(print("What size pizza do you want? S, M, or L"))
if size == "S":
 bill = 15
 print("$15")
 add_pepperoni = input("Do you want pepperoni? Y or N")
 if add_pepperoni == "Y":
  bill +=2
 add_cheese = input("Do you want extra cheese? Y or N")
 if add_cheese == "Y":
  bill +=1

if size == "M":
 bill = 20
 print("$20")
 add_pepperoni = input("Do you want pepperoni? Y or N")
 if add_pepperoni == "Y":
  bill +=3
 add_cheese = input("Do you want extra cheese? Y or N")
 if add_cheese == "Y":
  bill +=1

if size == "L":
 bill = 25
 print("$25")
 add_pepperoni = input("Do you want pepperoni? Y or N")
 if add_pepperoni == "Y":
  bill +=3
 add_cheese = input("Do you want extra cheese? Y or N")
 if add_cheese == "Y":
  bill +=1

print(f"Your final bill is {bill}")

# Progam the code to calculate your love score!
name1 = "Jie Yang"
name2 = "Hui Xie"

combined_names = name1 + name2
lower_names = combined_names.lower()
t = lower_names.count("t")
r = lower_names.count("r")
u = lower_names.count("u")
e = lower_names.count("e")
first_digit = t + r + u + e

l = lower_names.count("l")
o = lower_names.count("o")
v = lower_names.count("v")
e = lower_names.count("e")
second_digit = l + o + v + e

score = int(str(first_digit) + str(second_digit))
if (score < 10) or (score > 90):
 print(f"Your score is {score}, you go together like coke and mentos.")
elif (score >= 40) and (score <= 50):
 print(f"Your score is {score}, you are alright together.")
else:
 print(f"Your score is {score}.")

